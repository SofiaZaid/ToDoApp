@page
@model ToDoApp.Pages.ToDos.CreateModel

@{
    ViewData["Title"] = "Add a new todo item";
}

<h1>Add a new todo item</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDoItem.TaskName" class="control-label"></label>
                <input asp-for="ToDoItem.TaskName" class="form-control" />
                <span asp-validation-for="ToDoItem.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.TypeOfTask" class="control-label"></label>
                <select asp-for="ToDoItem.TypeOfTask" class="form-control">
                    <option value="">Choose an activity</option>
                    <option value="0">Work</option>
                    <option value="1">Exercice</option>
                    <option value="2">Shopping</option>
                    <option value="3">Leisure</option>
                    <option value="4">Other</option>
                </select>
                <span asp-validation-for="ToDoItem.TypeOfTask" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.Description" class="control-label"></label>
                <input asp-for="ToDoItem.Description" class="form-control" />
                <span asp-validation-for="ToDoItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToDoItem.Done" /> @Html.DisplayNameFor(model => model.ToDoItem.Done)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
